{
  "name": "ts-tacitus",
  "version": "0.0.1",
  "description": "cli for the tacit language",
  "main": "dist/cli.js",
  "bin": {
    "tacitus": "dist/cli.js"
  },
  "license": "GPL-3.0-only",
  "dependencies": {
    "@types/node": "^22.10.2",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest --runInBand",
    "start": "node -r tsconfig-paths/register dist/cli.js",
    "dev": "ts-node -r tsconfig-paths/register src/cli.ts",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --max-warnings=10",
    "lint:fix": "eslint src --fix",
    "lint:js": "eslint . --ext .js,.mjs",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "format:fix": "node fix-spacing.js && prettier --write 'src/**/*.{ts,tsx,js,jsx}'"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "eslint": "^9.17.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "tsconfig-paths": "^4.2.0"
  }
}
